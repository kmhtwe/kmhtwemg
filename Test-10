#include<stdio.h>
#include<conio.h>
int main() {

    int x = 0;
    int y = 0;
    int i =0;
    int j = 0;
    int k = 0;
    int n = 0;

    printf("Enter number of Rows:\n");
    scanf("%d", &n);

    for (int x = 1; x <= n; x++) {
        for (int y = 1; y <= n-x; y++) {
            printf(" ");
        }
        for (int i=0; i <=x-1; i++) {
            printf("* ");
        }
        for (int j=0; j <= n-x; j++) {
            printf("  ");
        }
        for(int k=0; k<=x-1; k++) {
            printf("* ");
        }
            printf("\n");
        }

    return 0;
}
